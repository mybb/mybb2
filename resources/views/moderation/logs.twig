{% extends "moderation.base" %}
{% block inner_contents %}
    <header class="page-header">
        <h1 class="page-title">{{ trans('moderation.logs_title') }}</h1>
    </header>

    {% if logs is not empty %}
    <table class="table table--bordered">
        <thead>
        <tr>
            <th>Description</th>
            <th>Time</th>
            <th>IP Address</th>
        </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.description | raw }}</td>
                <td style="text-align: center;">{{ log.created_at.diffForHumans }}</td>
                <td style="text-align: center;">{{ log.ip_address }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endblock %}
