{% extends "layouts.admin" %}
{% block title %}{% endblock %}
{% block contents %}
    <h1>Add Profile Field Group</h1>

    <div>
        <a href="{{ url_route('admin.settings.profile_fields') }}" class="button button--secondary"><i class="fa fa-chevron-left"></i> Back</a>
    </div>

    <div>
        {{ form_open({'route': ['admin.settings.profile_fields.add_group', field.id], 'method': 'post'}) }}
        <section class="form">
            <div class="form__section">
                <div class="form__row">
                    <h3>{{ form_label('name', 'Name') }}</h3>
                    {{ form_text('name') }}
                </div>
                <div class="form__row">
                    <h3>{{ form_label('slug', 'Slug') }}</h3>
                    {{ form_text('slug') }}
                </div>
                <div class="form__row">
                    <h3>{{ form_label('description', 'Description') }}</h3>
                    {{ form_text('description') }}
                </div>
                <div class="form__submit">
                    {{ form_button('Add', {'type': 'submit', 'class': 'button'}) }}
                </div>
            </div>
        </section>
        {{ form_close() }}
    </div>
{% endblock %}
