<input type="radio" value="0" name="setting[{{ setting.name }}]" id="{{ setting.name }}_all" {{ setting.value == 0 ? 'checked' }}>
<label for="{{ setting.name }}_all">{{ trans('admin::settings.role.all') }}</label>

<input type="radio" value="1" name="setting[{{ setting.name }}]" id="{{ setting.name }}_select" {{ setting.value and setting.value != 0 ? 'checked' }}>
<label for="{{ setting.name }}_select">{{ trans('admin::settings.role.select') }}</label>

{# todo need some js for showing/hiding select dependends on selected radio #}
<select name="setting[{{ setting.name }}_select][]" id="{{ setting.name }}" multiple>
    {% for role in roles %}
        <option value="{{ role.id }}" {{ role.id in setting.value|split('|') ? 'selected' }}>
            {{ role.role_display_name }}
        </option>
    {% endfor %}
</select>

<input type="radio" value="-1" name="setting[{{ setting.name }}]" id="{{ setting.name }}_none" {{ setting.value == null ? 'checked' }}>
<label for="{{ setting.name }}_none">{{ trans('admin::settings.role.none') }}</label>
