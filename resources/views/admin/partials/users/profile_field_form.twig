<section class="form">
    <div class="form__section">
        {% if field is defined and field.id is defined %}
            {{ form_hidden('profile_field_id', field.id) }}
        {% endif %}
        <div class="form__row">
            <h3 class="form__row__title">{{ form_label('profile_field_group_id', trans('admin::profile_fields.group_field')) }}</h3>
            {{ form_select('profile_field_group_id', groups, field ? field.profile_field_group_id) }}
        </div>
        <div class="form__row">
            <h3 class="form__row__title">{{ form_label('type', trans('admin::profile_fields.type_field')) }}</h3>
            {{ form_select('type', {
                'text': trans('admin::profile_fields.type_option_text'),
                'email': trans('admin::profile_fields.type_option_email'),
                'url': trans('admin::profile_fields.type_option_url'),
                'number': trans('admin::profile_fields.type_option_number'),
                'textarea': trans('admin::profile_fields.type_option_textarea'),
                'select': trans('admin::profile_fields.type_option_select')
            }, field ? field.type) }}
        </div>
        <div class="form__row">
            <h3 class="form__row__title">{{ form_label('name', trans('admin::profile_fields.name_field')) }}</h3>
            {{ form_text('name', field ? field.name) }}
        </div>
        <div class="form__row">
            <h3 class="form__row__title">{{ form_label('description', trans('admin::profile_fields.description_field')) }}</h3>
            {{ form_text('description', field ? field.description) }}
        </div>
        <div class="form__row">
            <h3 class="form__row__title">{{ form_label('validation_rules', trans('admin::profile_fields.validation_rules_field')) }}</h3>
            <p class="form__row__description">{{ trans('admin::general.see') }} <a href="http://laravel.com/docs/5.0/validation#available-validation-rules">Laravel Validation Rules</a></p>
            {{ form_text('validation_rules', field is defined and field.has_validation_rules ? field.validation_rules) }}
        </div>
        <div class="form__submit">
            {{ form_button(trans('admin::general.save'), {'type': 'submit', 'class': 'button'}) }}
        </div>
    </div>
</section>
