{% extends "layouts.admin" %}
{% block title %}{% endblock %}
{% block contents %}
    <h1>Edit Profile Field</h1>

    <div>
        <a href="{{ url_route('admin.users.profile_fields') }}" class="button button--secondary"><i class="fa fa-chevron-left"></i> Back</a>
    </div>

    <div>
        {{ form_open({'route': ['admin.users.profile_fields.edit', field.id], 'method': 'post'}) }}
        {% include "admin.partials.users.profile_field_form" with [field] %}
        {{ form_close() }}
    </div>

    <div>
        {{ form_open({'route': ['admin.users.profile_fields.test'], 'method': 'post'}) }}
        {{ form_hidden('profile_field_id', field.id) }}
        <section class="form">
            <div style="background: #007fd0;">
                <p style="color: white; margin: 0; padding: 5px 5px 5px 10px;">Preview</p>
            </div>
            <div class="form__section">
                <div class="form__row">
                    {{ form_render_field(field) }}
                </div>
                <div class="form__submit">
                    <button type="submit" class="button">Submit</button>
                </div>
            </div>
        </section>
        {{ form_close() }}
    </div>
{% endblock %}
