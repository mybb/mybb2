{% extends "account.base" %}
{% block inner_title %}
	{{ trans('account.privacy') }}
{% endblock %}
{% block inner_contents %}
		<header>
			<h1>{{ trans('account.privacy') }}</h1>
		</header>

	{{ form_open({'url_route': 'account.privacy', 'method': 'post'}) }}
	<section class="form">
		<div class="form__section">
			<h2>{{ trans('account.blocked_users') }}</h2>
			<div class="form__section__container">
				<div class="compact-users-list blocked-users">
					<a href="index.php?page=profile"><img src="{{ asset('images/avatar.png') }}" class="avatar" />Always Annoying</a>
					<a href="index.php?page=profile"><img src="{{ asset('images/avatar.png') }}" class="avatar" />Angry</a>
					<a href="index.php?page=profile"><img src="{{ asset('images/avatar.png') }}" class="avatar" />Annoying</a>
					<a href="index.php?page=profile"><img src="{{ asset('images/avatar.png') }}" class="avatar" />Really Annoying</a>
					<a href="index.php?page=profile"><img src="{{ asset('images/avatar.png') }}" class="avatar" />Super Needy</a>
					<a href="index.php?page=profile"><img src="{{ asset('images/avatar.png') }}" class="avatar" />Unavoidably Annoying</a>
				</div>
				<div class="buttons">
					<a href="index.php?page=account/blocked" class="button button--secondary icon fa-shield">{{ trans('account.manage_blocked') }}</a>
				</div>
			</div>
		</div>
		<div class="form__section">
			<h2>{{ trans('general.forum') }}</h2>
			<div class="form__section__container">
				<div class="form__row">
					<p class="form__checkbox"><label>{{ form_checkbox('showonline', 1, setting('user.showonline', true)) }} {{ trans('account.showonline') }}</label></p>
					<p class="form__checkbox"><label>{{ form_checkbox('receive_messages', 1, setting('user.receive_messages', true)) }} {{ trans('account.receive_messages') }}</label></p>
					<p class="form__checkbox"><label>{{ form_checkbox('block_blocked_messages', 1, setting('user.block_blocked_messages', true)) }} {{ trans('account.block_blocked_messages') }}</label></p>
					<p class="form__checkbox"><label>{{ form_checkbox('hide_blocked_posts', 1, setting('user.hide_blocked_posts', true)) }} {{ trans('account.hide_blocked_posts') }}</label></p>
					{# another raw value #}
					<p class="form__checkbox"><label>{{ form_checkbox('only_buddy_messages', 1, setting('user.only_buddy_messages', false)) }} {{ trans('account.only_buddy_messages', {'link': url_route('account.buddies')})|raw }}</label></p>
					<p class="form__checkbox"><label>{{ form_checkbox('receive_email', 1, setting('user.receive_email', true)) }} {{ trans('account.receive_email') }}</label></p>
				</div>
			</div>
		</div>
		<div class="form__section">
			<h2>{{ trans('account.profile') }}</h2>
			<div class="form__section__container">
				<div class="form__row">
					<h3>{{ trans('account.dob_privacy') }}</h3>
					<p class="form__description">{{ trans('account.dob_privacy_desc') }}</p>
					<div class="segmented-control">
							<span class="segmented-control__block">
								{{ form_radio('dob_privacy', 0, setting('user.dob_privacy', 2) == 0, {'id': 'no_dob'}) }}
								<label class="segmented-control__button" for="no_dob">
									<span class="text">{{ trans('general.nothing') }}</span>
								</label>
							</span><span class="segmented-control__block">
								{{ form_radio('dob_privacy', 1, setting('user.dob_privacy', 2) == 1, {'id': 'age_only'}) }}
								<label class="segmented-control__button" for="age_only">
									<span class="text">{{ trans('general.age') }}</span>
								</label>
							</span><span class="segmented-control__block">
								{{ form_radio('dob_privacy', 2, setting('user.dob_privacy', 2) == 2, {'id': 'dob_age'}) }}
								<label class="segmented-control__button" for="dob_age">
									<span class="text">{{ trans('general.dob') }}</span>
								</label>
							</span>
					</div>
				</div>
				<div class="form__row">
					<h3>{{ trans('account.dob_visibility') }}</h3>
					<div class="segmented-control">
							<span class="segmented-control__block">
								{{ form_radio('dob_visibility', 0, setting('user.dob_visibility', 1) == 0, {'id': 'dob_everyone'}) }}
								<label class="segmented-control__button" for="dob_everyone">
									<span class="text">{{ trans('general.everyone') }}</span>
								</label>
							</span><span class="segmented-control__block">
								{{ form_radio('dob_visibility', 1, setting('user.dob_visibility', 1) == 1, {'id': 'dob_members'}) }}
								<label class="segmented-control__button" for="dob_members">
									<span class="text">{{ trans('member.members') }}</span>
								</label>
							</span><span class="segmented-control__block">
								{{ form_radio('dob_visibility', 2, setting('user.dob_visibility', 1) == 2, {'id': 'dob_buddies'}) }}
								<label class="segmented-control__button" for="dob_buddies">
									<span class="text">{{ trans('account.buddies') }}</span>
								</label>
							</span>
					</div>
				</div>
				{# everything below refers to profilefields and should be dynamic #}
				<div class="form__row">
					<h3>Show your sex to:</h3>
					<div class="segmented-control">
							<span class="segmented-control__block">
								<input type="radio" name="" id="sex_everyone" checked="checked" />
								<label class="segmented-control__button" for="sex_everyone">
									<span class="text">Everyone</span>
								</label>
							</span><span class="segmented-control__block">
								<input type="radio" name="" id="sex_members" />
								<label class="segmented-control__button" for="sex_members">
									<span class="text">Members</span>
								</label>
							</span><span class="segmented-control__block">
								<input type="radio" name="" id="sex_buddies" />
								<label class="segmented-control__button" for="sex_buddies">
									<span class="text">Buddies</span>
								</label>
							</span>
					</div>
				</div>
				<div class="form__row">
					<h3>Show your location to:</h3>
					<div class="segmented-control">
							<span class="segmented-control__block">
								<input type="radio" name="" id="location_everyone" checked="checked" />
								<label class="segmented-control__button" for="location_everyone">
									<span class="text">Everyone</span>
								</label>
							</span><span class="segmented-control__block">
								<input type="radio" name="" id="location_members" />
								<label class="segmented-control__button" for="location_members">
									<span class="text">Members</span>
								</label>
							</span><span class="segmented-control__block">
								<input type="radio" name="" id="location_buddies" />
								<label class="segmented-control__button" for="location_buddies">
									<span class="text">Buddies</span>
								</label>
							</span>
					</div>
				</div>
				<div class="form__row">
					<h3>Show your bio to:</h3>
					<div class="segmented-control">
							<span class="segmented-control__block">
								<input type="radio" name="" id="bio_everyone" />
								<label class="segmented-control__button" for="bio_everyone">
									<span class="text">Everyone</span>
								</label>
							</span><span class="segmented-control__block">
								<input type="radio" name="" id="bio_members" checked="checked" />
								<label class="segmented-control__button" for="bio_members">
									<span class="text">Members</span>
								</label>
							</span><span class="segmented-control__block">
								<input type="radio" name="" id="bio_buddies" />
								<label class="segmented-control__button" for="bio_buddies">
									<span class="text">Buddies</span>
								</label>
							</span>
					</div>
				</div>
				<div class="form__row">
					<h3>Show your contact details to:</h3>
					<div class="segmented-control">
							<span class="segmented-control__block">
								<input type="radio" name="" id="contact_everyone" />
								<label class="segmented-control__button" for="contact_everyone">
									<span class="text">Everyone</span>
								</label>
							</span><span class="segmented-control__block">
								<input type="radio" name="" id="contact_members" />
								<label class="segmented-control__button" for="contact_members">
									<span class="text">Members</span>
								</label>
							</span><span class="segmented-control__block">
								<input type="radio" name="" id="contact_buddies" checked="checked" />
								<label class="segmented-control__button" for="contact_buddies">
									<span class="text">Buddies</span>
								</label>
							</span>
					</div>
				</div>
			</div>
		</div>
	</section>
	<div class="form__submit">
		{{ form_button(trans('account.update_privacy'), {'type': 'submit', 'class': 'button icon fa-shield'}) }}
	</div>
	{{ form_close() }}

{% endblock %}