            <div class="post post--conversation post--reply" id="post-reply">
                {{ form_open({'route': ['conversations.reply', conversation.id], 'method': 'post', 'id': 'quickreply'}) }}
                    <div class="post__meta">
                        <a href="{{ url_route('user.profile', {'slug': auth_user.name, 'id': auth_user.id}) }}" class="avatar-profile-link"><img src="{{ auth_user.avatar }}" alt="Your avatar" class="avatar" /></a>
                        <h3><a href="{{ url_route('user.profile', {'slug': auth_user.name, 'id': auth_user.id}) }}">{{ auth_user.styled_name|raw }}</a></h3>
                        <span class="post__date">Now</span>
{#                        <a href="{{ url_route("topics.reply", [topic.slug, topic.id]) }}" class="full-reply" title="Open Full Editor"
                                onclick="openFullEditor(); return false;">
                            <i class="fa fa-external-link"></i>
                            <span class="text">Full Editor</span>
                        </a>#}
                    </div>
                    <div class="post__body">
                        {{ form_textarea('message', input_get('message'), {'class':'textarea', 'rows': '5', 'placeholder': trans('conversations.write_message')}) }}
