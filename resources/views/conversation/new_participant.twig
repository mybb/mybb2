{% extends "layouts.base" %}
{% block title %}{{ conversation.title }} - {{ trans('conversations.add_participants') }}{% endblock %}
{% block contents %}
	<div class="page-content">
		<header>
			<h1>{{ trans('conversations.add_participants') }}</h1>
		</header>

		{{ form_open({'route': ['conversations.newParticipant', conversation.id], 'method': 'post'}) }}
		<section class="form">
			<div class="form__section">
				<div class="form__row">
					<h3>{{ form_label('participants', trans('conversations.participants')) }}</h3>
					<p class="form__description">{{ trans('conversations.participants_desc') }}</p>
					{# TODO: some sort of autocomplete #}
					{{ form_text('participants') }}
				</div>
			</div>
		</section>
		<div class="form__submit">
			{{ form_button('<i class="fa fa-plus"></i><span class="text">'~trans('conversations.add_participants')~'</span>', {'type': 'submit', 'class': 'button'}) }}
		</div>
		{{ form_close() }}

	</div>
{% endblock %}
