{% extends "layouts.base" %}
{% block title %}
	{{ trans('user_activity.for_user_title', {'username': user.name}) }}
{% endblock %}
{% block head %}
	<meta name="description" content="{{ trans('user_activity.for_user_desc', {'username': user.name}) }}"/>
	<link rel="canonical" href="{{ url_route("user_activity.for_user") }}"/>
{% endblock %}
{% block contents %}
	<div class="page-content">
		<header>
			<h1>{{ trans('user_activity.for_user_title', {'username': user.name}) }}</h1>
			<div class="page-buttons">
				<a href="{{ url_route("user.profile", [user.name, user.id]) }}" class="button button--secondary"><i class="fa fa-arrow-circle-{{ langDir.left }}"></i><span class="text">{{ trans('user_activity.back_to_profile') }}</span></a>
			</div>
		</header>
		<div class="page-controls">
			{{ activity.render|raw }}
		</div>
		<ul class="activities">
			{% for entry in activity %}
				<li class="activity" id="activity-{{ entry.id }}" data-activity-id="{{ entry.id }}">
					{% if entry.user is user %}
						<div class="activity__user user" data-user-id="{{ entry.user.id }}">
							{{ render_profile_link(entry.user, true) }}
						</div>
					{% else %}
						<div class="activity__user"></div>
					{% endif %}
					{{ entry.activityString|raw }}
					<div class="activity__date">
						{{ human_date(entry.created_at) }}
					</div>
				</li>
			{% endfor %}
			{{ activity.render|raw }}
		</ul>
	</div>
{% endblock %}
