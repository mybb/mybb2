{% if preview is not null %}
	<div class="post">
		<div class="post__meta">

			<a href="{{ url_route('user.profile', [preview.author.id, preview.author.name]) }}" class="avatar-profile-link" title="{{ trans('topic.goToXProfile', { 'name':preview.author.name}) }}"><img src="{{ preview.author.avatar }}" class="avatar" alt="{{ trans('topic.XAvatar', { 'name':preview.author.name}) }}" /></a>
			<h3 class="post__author">{{ render_profile_link(preview.author) }}</h3>
			{{ generate_time(preview.created_at) }}
		</div>
		<div class="post__body">
			<p>
				{{  preview.content_parsed|raw }} {# HTML is filtered by the parser, so show raw HTML. Only do this if you're 100% sure of your variables! #}
			</p>
		</div>
	</div>
{% endif %}
