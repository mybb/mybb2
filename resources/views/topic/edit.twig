{% extends "layouts.base" %}
{% block title %}{{ topic.title }}{% endblock %}
{% block head %}
    <link rel="canonical" href="{{ url_route("topics.edit", [topic.slug, topic.id, post.id]) }}" />
{% endblock %}
{% block contents %}
	<div class="page-content">
		<header>
			<h1>{{ trans('topic.editpost') }}</h1>
			<div class="page-buttons">
				<a href="{{ url_route("topics.show", [topic.slug, topic.id]) }}" class="button button--secondary"><i class="fa fa-arrow-circle-{{ langDir.left }}"></i><span class="text">{{ trans('general.cancel') }}</span></a>
			</div>
		</header>
		{{ form_open({'route': ['topics.edit', topic.slug, topic.id, post.id], 'method': 'post', 'class': 'form-section clearfix'}) }}
		<section class="form">
			<div class="form__section">
				{% if topic.first_post_id == post.id %}
					<div class="form__row">
						<h3>{{ form_label('title', 'Title') }}</h3>
						{{ form_text('title', topic.title, {'placeholder': 'Enter a meaningful title...', 'title': 'Enter a meaningful title...'}) }}
					</div>
				{% endif %}
				<div class="form__row">
					<h3>{{ form_label('content', 'Content') }}</h3>
					{{ form_textarea('content', post.content) }}
				</div>
			</div>
		</section>
		<div class="form__submit">
			{{ form_button('<i class="fa fa-edit"></i><span class="text">'~trans('topic.editpost')~'</span>', {'type': 'submit', 'class': 'button'}) }}
		</div>
		{{ form_close() }}
	</div>
{% endblock %}
