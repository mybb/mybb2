{% if errors.any %}
    <div class="alert alert--danger">
        <p class="alert__message icon fa-warning">{{ trans('errors.inline_error') }}</p>
        <ul>
            {% for error in errors.all %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

{% if session_has('success') %}
    <div class="alert alert--success">
        <p class="alert__message icon fa-check-circle">{{ session_get('success') }}</p>
    </div>
{% endif %}